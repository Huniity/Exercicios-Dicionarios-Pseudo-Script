entrada("Por favor introduza o seu compromisso:", compromisso)
    agenda[prioridade] = (compromisso, nota)

entrada("Deseja criar mais compromissos ou ver os seus compromissos ordenados?", escolha1)
    
    se escolha1 == 1
        ordenar_compromissos()
    se escolha1 == 2
