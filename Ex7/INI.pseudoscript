funcao ordenar_compromissos(agenda):

indice_agenda = tamanho(agenda)
pos = 0

    enquanto tamanho_agenda > 0
        para cada chave em agenda.chaves():
            para cada pos em tamanho(agenda)-1
                se agenda[pos][prioridade] > agenda[pos+1][prioridade]
                    agenda[pos][prioridade], agenda[pos+1][prioridade] = agenda[pos+1][prioridade], agenda[prioridade][pos]
                retorne resultado
        
    imprime(agenda)



        


    
